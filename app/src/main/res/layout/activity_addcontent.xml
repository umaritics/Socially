<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addcontent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/topNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/canceltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/cancel"
                android:textColor="@color/brown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/editprofiletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_toRightOf="@+id/canceltext"
                android:text="@string/recents"
                android:textColor="@color/brown"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/editprofiletext"
                android:background="@drawable/accounts_list"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/nexttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/next"
                android:textColor="@color/brown"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/createimagesection"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:layout_below="@+id/topNav"
            >
            <ImageView
                android:layout_width="375dp"
                android:layout_height="375dp"
                android:src="@drawable/createimage"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/actions_bar"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"/>


        </RelativeLayout>
        <ScrollView
            android:id="@+id/posts"
            android:layout_below="@+id/createimagesection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="4"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="false"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost1"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost2"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost3"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost4"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost5"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost6"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost7"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost8"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost9"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost10"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <RelativeLayout
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_margin="0.5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/createpost11"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/text_overlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06:23"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="4dp"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost12"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost13"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost14"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost15"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                    <ImageView
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/createpost16"
                        android:scaleType="centerCrop"
                        android:layout_margin="0.5dp"/>

                </GridLayout>


            </LinearLayout>

        </ScrollView>
        <RelativeLayout
            android:id="@+id/bottom_nav"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Library"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:textColor="@color/brown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_toRightOf="@+id/library"
                android:text="Photo"
                android:textColor="@color/brown"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Video"
                android:textColor="@color/brown"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="40dp"/>


        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>